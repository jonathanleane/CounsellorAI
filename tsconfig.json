{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["scripts/**/*", "*.js", "*.ts"],
  "exclude": ["node_modules", "server/dist", "client/build", "client/dist"],
  "references": [
    { "path": "./server" },
    { "path": "./client" }
  ]
}